clean:
	@for obj in $(OBJS); do \
		printf "$(RED)Cleaning $(NAME)...  Removing $$obj... " && \
		sleep 0.01 && \
		rm -f $$obj && \
		printf "\r"; \
	done
	@for obj in $(BONUS_OBJS); do \
		printf "$(RED)Cleaning $(BONUS_NAME)...  Removing $$obj... " && \
		sleep 0.01 && \
		rm -f $$obj && \
		printf "\r"; \
	done

	@printf "                                                                                                          \r$(GREEN)$(NAME) is Clean\n$(RESET)"

	
fclean: clean
	@rm -f $(NAME) $(BONUS_NAME) 
	
re: fclean all

.PHONY : all clean fclean re bonus
